{
  "name": "pixelated_frankie",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-devtools": "^4.28.5",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "npm-watch": "^0.11.0",
    "terser": "^5.22.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "NODE_ENV=production tailwindcss build -i src/css/tailwind.css -o src/css/styles.css",
    "minify:js": "for file in src/js/*.js; do terser \"$file\" -o \"dist/js/$(basename $file)\"; done",
    "watch:css": "npm-watch",
    "watch:js": "./node_modules/.bin/nodemon --watch src/js/*.js -e js -x 'npm run minify:js'"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "./src/components/common/**/*.js"
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
